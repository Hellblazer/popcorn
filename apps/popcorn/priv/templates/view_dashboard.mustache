<!DOCTYPE html>
<html>
    <head>
        <title>Popcorn Log Analysis</title>
        {{#head_includes}}
          {{tag}}
        {{/head_includes}}
    </head>
    <body>

    <!-- Navbar
      ================================================== -->
    <div class="navbar navbar-static-top navbar-inverse">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>

          <a class="brand" href="/">Popcorn</a>
          <span class="tagline">a predictive & intelligent log analysis machine</span>

          <div class="nav-collapse collapse" id="main-menu">
            <div class="auth pull-right">
                <img class="avatar" src="images/littke.png">
                <span class="name">{{username}}</span><br/>
                <span class="links">
                    <a href="/settings">Settings</a>
                    <a href="/logout">Logout</a>
                </span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="container">
        <div class="row-fluid">
            <div class="span3">
                <aside>
                    <nav>
                        <ul class="nav">
                          <li class="selected">
                            <a href="#dashboard"><i class="icon-list"></i> Dashboard</a>
                          </li>
                          <li>
                            <a href="#alerts"><i class="icon-bell icon-white"></i> Alerts</a>
                          </li>
                          <li>
                            <a href="#nodes"><i class="icon-th-large icon-white"></i> Nodes</a>
                          </li>
                        </ul>
                    </nav>
                </aside>
            </div>
            <div class="span9" id="content-wrapper">
                <div id="content">

                    <!-- Navbar
                    ================================================== -->
                    <section id="stats">
                      <a name="dashboard">
                        <header>
                          <h1>Dashboard</h1>
                        </header>
                      </a>
                      <div class="row-fluid">
                        <div class="span2">
                            <div class="kpi">{{node_count}}</div>
                            <div><small>nodes</small></div>
                        </div>
                        <div class="span2">
                            <div id="event_count" class="kpi">{{event_count}}</div>
                            <div><small>events</small></div>
                    </div>
                    <div class="span2">
                        <div class="kpi">{{hashtag_count}}</div>
                        <div><small>#hashtags</small></div>
                    </div>
                    <div class="span2">
                        <div class="kpi">{{mention_count}}</div>
                        <div><small>@mentions</small></div>
                    </div>
                    <div class="span2">
                        <div id="alert_count_today" class="kpi">{{alert_count_today}}</div>
                        <div><small>alerts today</small></div>
                    </div>
                    <div class="span2">
                        <div id="alert_count" class="kpi">{{alert_count}}</div>
                        <div><small>total alerts</small></div>
                    </div>
                  </div>
                </section>
                <!-- Dashboard
                ================================================== -->

                <section id="alerts">
                  <a name="alerts">
                    <header>
                      <h1>Alerts</h1>
                    </header>
                  </a>
                  <table class="table table-striped full-section table-hover">
                      {{#alerts}}
                        <tr>
                          <td>{{name}} line {{line}}<br/>{{message}}</td>
                          <td>{{count}} seen</td>
                          <td align="right">version {{version}}</td>
                        </tr>
                      {{/alerts}}
                  </table>
                </section>

                <!-- Nodes
                ================================================== -->
                <section id="nodes">
                  <a name="nodes">
                    <header>
                      <h1>Nodes</h1>
                    </header>
                  </a>
                  <table class="table table-striped full-section table-hover">
                    <thead>
                      <tr>
                        <th>Name</th>
                        <th>Event Count</th>
                        <th>% All Events</th>
                        <th>Alerts</th>
                        <th>#hashtags</th>
                        <th>@mentions</th>
                      </tr>
                    </thead>
                    <tbody>
                      {{#known_nodes}}
                        <tr>
                          <td class="primary"><a href="/node/{{node_name}}">{{node_name}}</a></td>
                          <td>{{total_messages}}</td>
                          <td>
                            <div class="progress progress-mini">
                              <div class="bar" style="width: {{percent_of_all_events}}%"></div>
                            </div>
                          </td>
                          <td>{{alert_count}}</td>
                          <td>{{hashtag_count}}</td>
                          <td>{{mention_count}}</td>
                        </tr>
                      {{/known_nodes}}
                    </tbody>
                  </table>
                </section>
            </div>
        </div>
    </div>
</div><!-- /container -->



    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="/js/jquery.min.js"></script>
    <script src="/bootstrap/js/bootstrap-dropdown.js"></script>
    <script src="/bootstrap/js/bootstrap-collapse.js"></script>

    <script type="text/javascript">

      var streamSource = new EventSource("/dashboard/stream/{{stream_id}}");

      streamSource.onmessage = function(eventObject) {
        var event = JSON.parse(eventObject.data);
        switch(event.kind) {
          case "update_counters":
            $('#event_count').text(event.data.event_count);
            $('#alert_count_today').text(event.data.alert_count_today);
            $('#alert_count').text(event.data.alert_count);
            break;
          default:
            console.log({"unknown event": event})
        }
        
      };

    </script>

  </body>
</html>

